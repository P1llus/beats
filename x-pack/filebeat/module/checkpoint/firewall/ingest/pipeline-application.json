{
  "description" : "Application Control",
  "processors" : [
    {
      "set" : {
        "field": "message",
        "value": "Malicious Activity on {{checkpoint.scope}}. {{checkpoint.malware_action}}"
      }
    },
    {
      "set" : {
        "field": "event.category",
        "value": "network"
      }
    },
    {
      "set" : {
        "field": "observer.type",
        "value": "application_control"
      }
    },
    {
      "rename" : {
        "field": "checkpoint.app_name",
        "target_field": "networ.application",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.app_risk",
        "target_field": "event.severity",
        "ignore_missing": true,
        "if": "ctx.event?.severity == null"
      }
    },
    {
      "rename" : {
        "field": "checkpoint.app_rule_id",
        "target_field": "event.rule.id",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.app_rule_name",
        "target_field": "event.rule.name",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.client_type_os",
        "target_field": "source.os.name",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.referrer",
        "target_field": "http.request.referrer",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.security_outzone",
        "target_field": "observer.egress.zone",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.security_inzone",
        "target_field": "observer.ingress.zone",
        "ignore_missing": true
      }
    },
    {
      "rename" : {
        "field": "checkpoint.url",
        "target_field": "url.original",
        "ignore_missing": true
      }
    }
  ]
}